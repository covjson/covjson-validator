{
    "$id": "/schemas/unit",
    "type" : "object",
    "description" : "The units of measure",
    "properties" :
    {
       "id" : { "type" : "string" },
       "label" : { "$ref" : "/schemas/i18n" },
       "symbol" :
       {
           "oneOf" :
           [
               { "type" : "string" },
               {
                   "type" : "object",
                   "properties" :
                   {
                       "type" : { "type" : "string" },
                       "value" : { "type" : "string" }
                   },
                   "required" : [ "type", "value" ]
               }
           ]
       }
    },
    "anyOf" :
    [
        { "required" : [ "label" ] },
        { "required" : [ "symbol" ] }
    ]
}