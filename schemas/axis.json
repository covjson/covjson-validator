{
    "$id": "/schemas/axis",
    "type" : "object",
    "description" : "Represents an axis within a domain",
    "properties" :
    {
        "start" : { "type" : "number" },
        "stop" : { "type" : "number" },
        "num" :
        {
            "type" : "integer",
            "minimum" : 1
        },
        "values" :
        {
            "type" : "array",
            "minItems" : 1,
            "uniqueItems" : true
        },
        "bounds" :
        {
            "description" : "Optional axis bounds. Must be twice as long (and same data type) as \"values\"",
            "type" : "array",
            "minItems" : 2
        },
        "dataType" : { "type" : "string" },
        "coordinates" :
        {
            "type" : "array",
            "contains" : { "type" : "string" },
            "minItems" : 1
        }
    },
    "oneOf" :
    [
        {
            "description" : "A regularly-spaced numeric axis",
            "required" : [ "start", "stop", "num" ],
            "not" : { "required" : [ "values", "coordinates", "bounds" ] }
        },
        {
            "description" : "Polygon or tuple-based axis",
            "properties" :
            {
                "dataType" : { "enum" : [ "tuple", "polygon" ] },
                "values" : { "contains" : { "type" : "array" } }
            },
            "required" : [ "dataType", "values", "coordinates" ],
            "not" : { "required" : [ "start", "stop", "num", "bounds" ] }
        },
        {
            "description" : "Values-based axis with primitive values (numbers or strings)",
            "properties" :
            {
                "dataType" : { "const" : "primitive" }
            },
            "oneOf" :
            [
                {
                    "properties" :
                    {
                        "values" : { "contains" : { "type" : "number" } },
                        "bounds" : { "contains" : { "type" : "number" } }
                    } 
                },
                { 
                    "properties" :
                    {
                        "values" : { "contains" : { "type" : "string" } },
                        "bounds" : { "contains" : { "type" : "string" } }
                    }
                }
            ],
            "required" : [ "values" ],
            "not" : { "required" : [ "start", "stop", "num", "coordinates" ] }
        }
    ]
}