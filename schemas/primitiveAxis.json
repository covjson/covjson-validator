{
    "$id": "/schemas/primitiveAxis",
    "description" : "Axis with primitive values (numbers or strings)",
    "$ref" : "/schemas/baseAxis",
    "oneOf" :
    [
        {
            "description" : "A regularly-spaced numeric axis",
            "required" : [ "start", "stop", "num" ],
            "not" : { "required" : [ "values", "coordinates", "bounds" ] }
        },
        {
            "description" : "Primitive axis based on list of numbers or strings",
            "properties" :
            {
                "dataType" : { "const" : "primitive" }
            },
            "oneOf" :
            [
                {
                    "properties" :
                    {
                        "values" : { "contains" : { "type" : "number" } },
                        "bounds" : { "contains" : { "type" : "number" } }
                    } 
                },
                { 
                    "properties" :
                    {
                        "values" : { "contains" : { "type" : "string" } },
                        "bounds" : { "contains" : { "type" : "string" } }
                    }
                }
            ],
            "required" : [ "values" ],
            "not" : { "required" : [ "start", "stop", "num", "coordinates" ] }
        }
    ]
}